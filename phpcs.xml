<?xml version="1.0"?>
<ruleset name="glesys/butler-graphql">
    <arg name="colors"/>
    <arg name="parallel" value="16"/>

    <file>src</file>
    <file>tests</file>

    <rule ref="PSR12"/>

    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>./tests</exclude-pattern>
    </rule>

    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>./tests</exclude-pattern>
    </rule>
</ruleset>
